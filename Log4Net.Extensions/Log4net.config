<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <log4net xmlns="urn:log4net" debug="false">
    <appender name="SqlServerRequestAppender" type="log4net.Appender.ADONetAppender">
      <param name="bufferSize" value="1" />
      <param name="connectionType" value="System.Data.SqlClient.SqlConnection, System.Data, Version=1.0.3300.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" />
      <param name="connectionString" value="Data Source=(LocalDb)\MSSQLLocalDB;Initial Catalog=Redpackets;Integrated Security=SSPI;AttachDBFilename=|DataDirectory|\Redpackets.mdf"/>
      <param name="commandText" value="INSERT INTO Joya_RequestLog ([Method],[UserAgent],[Uri],[Refer],[Header],[Form],[SpendTime],[Ip],[Country],[Province],[City],[CreatedAt],[UpdatedAt]) VALUES (@method,@userAgent,@uri,@refer,@header,@form,@spendTime,@ip,@country,@province,@city,@createdAt,@updatedAt)" />
      <parameter>
        <parameterName value="@updatedAt" />
        <dbType value="DateTime" />
        <layout type="log4net.Layout.RawTimeStampLayout" />
      </parameter>
      <parameter>
        <parameterName value="@method" />
        <dbType value="Int32" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{method}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@userAgent" />
        <dbType value="String" />
        <size value="1000" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{userAgent}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@uri" />
        <dbType value="String" />
        <size value="200" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{uri}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@refer" />
        <dbType value="String" />
        <size value="500" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{refer}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@header" />
        <dbType value="String" />
        <size value="2000" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{header}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@form" />
        <dbType value="String" />
        <size value="4000" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{form}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@spendTime" />
        <dbType value="Double" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{spendTime}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@createdAt" />
        <dbType value="DateTime" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{createdAt}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@ip" />
        <dbType value="String" />
        <size value="15" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{ip}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@country" />
        <dbType value="String" />
        <size value="40" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{country}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@province" />
        <dbType value="String" />
        <size value="40" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{province}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@city" />
        <dbType value="String" />
        <size value="40" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{city}" />
        </layout>
      </parameter>
    </appender>
    <appender name="SqlServerSqlAppender" type="log4net.Appender.ADONetAppender">
      <param name="bufferSize" value="1" />
      <param name="connectionType" value="System.Data.SqlClient.SqlConnection, System.Data, Version=1.0.3300.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" />
      <param name="connectionString" value="Data Source=(LocalDb)\MSSQLLocalDB;Initial Catalog=Redpackets;Integrated Security=SSPI;AttachDBFilename=|DataDirectory|\Redpackets.mdf" />
      <param name="commandText" value="INSERT INTO Joya_SqlLog ([Message],[Exception],[Sql],[DbParameters],[SpendTime],[CreatedAt],[UpdatedAt]) VALUES (@message,@exception,@sql,@dbParameters,@spendTime,@createdAt,@updatedAt)" />
      <parameter>
        <parameterName value="@message" />
        <dbType value="String" />
        <size value="1000" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%message" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@exception" />
        <dbType value="String" />
        <size value="2000" />
        <layout type="log4net.Layout.ExceptionLayout" />
      </parameter>
      <parameter>
        <parameterName value="@sql" />
        <dbType value="String" />
        <size value="2000" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{sql}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@dbParameters" />
        <dbType value="String" />
        <size value="2000" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{dbParameters}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@spendTime" />
        <dbType value="Double" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{spendTime}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@createdAt" />
        <dbType value="DateTime" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{createdAt}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@updatedAt" />
        <dbType value="DateTime" />
        <layout type="log4net.Layout.RawTimeStampLayout" />
      </parameter>
    </appender>
    <appender name="SqlServerAppender" type="log4net.Appender.ADONetAppender">
      <param name="bufferSize" value="1" />
      <param name="connectionType" value="System.Data.SqlClient.SqlConnection, System.Data, Version=1.0.3300.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" />
      <param name="connectionString" value="Data Source=(LocalDb)\MSSQLLocalDB;Initial Catalog=Redpackets;Integrated Security=SSPI;AttachDBFilename=|DataDirectory|\Redpackets.mdf" />
      <param name="commandText" value="INSERT INTO Joya_Log ([Type],[Thread],[Level],[Message],[Exception],[Values],[CreatedAt]) VALUES (@type,@thread, @level, @message, @exception,@values,@createdAt)" />
      <parameter>
        <parameterName value="@createdAt" />
        <dbType value="DateTime" />
        <layout type="log4net.Layout.RawTimeStampLayout" />
      </parameter>
      <parameter>
        <parameterName value="@thread" />
        <dbType value="String" />
        <size value="255" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%thread" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@level" />
        <dbType value="Int32" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{level}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@message" />
        <dbType value="String" />
        <size value="2000" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%message" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@exception" />
        <dbType value="String" />
        <size value="2000" />
        <layout type="log4net.Layout.ExceptionLayout" />
      </parameter>
      <parameter>
        <parameterName value="@type" />
        <dbType value="Int32" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{type}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@values" />
        <dbType value="String" />
        <size value="4000" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%property{values}" />
        </layout>
      </parameter>
    </appender>
    <appender name="MysqlRequestAppender" type="log4net.Appender.ADONetAppender">

    </appender>
    <appender name="MysqlSqlAppender" type="log4net.Appender.ADONetAppender">

    </appender>
    <appender name="MysqlAppender" type="log4net.Appender.ADONetAppender">

    </appender>
    
    <logger name="RequestLogger" additivity="false">
      <level value="DEBUG"/>
      <appender-ref ref="SqlServerRequestAppender" />
    </logger>
    <logger name="SqlLogger" additivity="false">
      <level value="DEBUG"/>
      <appender-ref ref="SqlServerSqlAppender" />
    </logger>
    <logger name="Logger" additivity="false">
      <level value="DEBUG"/>
      <appender-ref ref="SqlServerAppender" />
    </logger>
  </log4net>
</configuration>